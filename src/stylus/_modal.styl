.slideup
.slidedown
    max-height 0
    overflow-y hidden
    transition max-height 0.3s ease-in-out, box-shadow 0.6s linear

.slidedown
    display block
    max-height 450px

.modal
    display none
    position absolute
    right 0
    top 52px
    width 100%
    z-index 100

    .rrssb-buttons
        margin-left -2px
        width 470px

    .social-btn
        $borderRadius()

        i
            color $white
            font-size 18px

        &.facebook
            text-align left
            width 190px

            .rrssb-text
                margin-left 5px

        &.twitter
            text-align left
            width 180px

            .rrssb-text
                margin-left 6px

            &.right
                margin-left 78px

    .users-modal
        $noSelect()
        background-color $white
        color $darkGray
        height 450px
        overflow hidden

        .close
            color $gray
            display block
            float right
            font-size 30px
            padding 40px

            &:hover
                color $blueDevWay

        &.login-modal
            $modal(login)

        &.register-modal
            background-color $registerModalBg

            $modal(register)
