.slideup
.slidedown
    max-height 0
    overflow-y hidden
    transition max-height 0.3s ease-in-out, box-shadow 0.6s linear

.slidedown
    display block
    max-height 400px

.modal
    display none
    position absolute
    right 0
    top 52px
    width 100%
    z-index 100

    .rrssb-buttons
        margin-left -2px
        width 470px

    .social-btn
        $borderRadius()

        i
            color $white
            font-size 18px

        &.facebook
            text-align left
            width 190px

            .rrssb-text
                margin-left 5px

        &.twitter
            text-align left
            width 180px

            .rrssb-text
                margin-left 6px

            &.right
                margin-left 78px

    .users-modal
        $noSelect()
        background-color $white
        color $darkGray
        height 400px
        overflow hidden

        .close
            color $gray
            display block
            float right
            font-size 30px
            padding 40px

            &:hover
                color $blueDevWay

        &.login-modal
            .login
                margin 0 auto
                margin-top 20px
                height 360px
                width 440px
                position relative

                h2
                    color $gray
                    font-size 30px
                    text-align center
                    margin-bottom 0

                .form-group
                    padding-bottom 20px

                    .submit
                        $centerWithMargin(30%)

                    .checkbox
                        input
                            position absolute
                            width 40px

            .btn-social
                bottom 0
                position absolute
                width 200px

            .btn-twitter
                left 0

            .btn-facebook
                right 0

            &.closed
                display none
                max-height 0

        &.register-modal
            background-color $registerModalBg

            .close
                color $white

                &:hover
                    color $gray

            &.closed
                display none
                max-height 0
