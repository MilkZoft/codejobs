.slideup
.slidedown
    max-height 0
    overflow-y hidden
    transition max-height 0.3s ease-in-out, box-shadow 0.6s linear

.slidedown
    display block
    max-height 400px

.modal
    display none
    position absolute
    right 0
    top 52px
    width 100%
    z-index 99

    .users-modal
        $noSelect()
        background-color $white
        color $darkGray
        height 400px

        .close
            display block
            float right
            font-size 30px
            padding 40px

        &.login-modal
            .login
                margin 0 auto
                margin-top 20px
                height 360px
                width 440px
                position relative

                h2
                    color $gray
                    text-align center

                .form-group
                    input[type="text"]
                    input[type="password"]
                        width 100%
                        margin 10px 0 10px 0
                        height: 40px;
                        padding: 6px 12px;
                        background-color: $white
                        border: 1px solid #ccc
                        border-radius 4px
                        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);

                    input[type="submit"]
                        width 100%


                    .checkbox
                        label
                            min-height: 20px;
                            padding-left: 20px;
                            margin-bottom: 0;
                            font-weight: 400;
                            cursor: pointer;
                            display: inline-block;
                            max-width: 100%;
                            $border()

                        input
                            width 40px
                            position absolute

            .btn-social
                position absolute
                width 200px
                bottom 0

            .btn-twitter
                left 0

            .btn-facebook
                right 0

            &.closed
                display none
                max-height 0

        &.register-modal
            background-color #0085de

            a
                color $white

                &:hover
                    color $darkGray

            &.closed
                display none
                max-height 0
